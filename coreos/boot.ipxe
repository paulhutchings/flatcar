#!ipxe

set BASE_URL http://iaas.studiop:8080
set IGNITION_URL ${BASE_URL}/${mac:hexhyp}/ignition.json
set ASSETS_PATH assets/coreos
set ASSETS_BASE_URL ${BASE_URL}/${ASSETS_PATH} 

kernel ${ASSETS_BASE_URL}/kernel initrd=main coreos.live.rootfs_url=${ASSETS_BASE_URL}/rootfs ignition.platform.id=metal ignition.firstboot ignition.config.url=${IGNITION_URL} console=ttyS0,115200n8 || shell
initrd --name main ${ASSETS_BASE_URL}/initramfs || shell

boot || shell